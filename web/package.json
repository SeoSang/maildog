{
  "name": "maildog",
  "version": "1.0.0",
  "scripts": {
    "dev": "set NODE_ENV=dev && next dev",
    "build": "set NODE_ENV=prod && next build && tsc --project tsconfig.json",
    "start": "set NODE_ENV=prod && next start",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier '**/*.{json,yaml,md}' --check",
    "prettier:fix": "prettier '**/*.{json,yaml,md}' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint",
      "prettier"
    ]
  },
  "type": "commonjs",
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "dependencies": {
    "@chakra-ui/css-reset": "^1.1.3",
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.6.8",
    "@egjs/react-grid": "^1.5.0",
    "@swc-node/jest": "^1.4.1",
    "axios": "^0.21.4",
    "bcrypt": "^5.0.1",
    "cookie": "^0.4.1",
    "core-js": "^3.12.1",
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "http-status": "^1.5.0",
    "http-status-codes": "^2.1.4",
    "jotai": "^1.6.1",
    "knex": "^0.95.11",
    "next": "^12.1.0",
    "next-cookies": "^2.0.3",
    "nodemailer": "^6.7.2",
    "nodemailer-smtp-transport": "^2.4.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "rooks": "^5.7.3",
    "sqlite3": "^5.0.2",
    "styled-components": "^5.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.4.1",
    "@types/crypto-js": "^4.0.2",
    "@types/http-status": "^1.1.2",
    "@types/jest": "^27.0.1",
    "@types/node": "^15.0.2",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "babel-jest": "^27.1.1",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^8.10.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-yceffort": "0.0.5",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^6.0.0",
    "jest": "^27.1.1",
    "lint-staged": "^11.0.0",
    "prettier": "2.4.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.2"
  }
}
